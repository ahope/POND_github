<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="horizontal" android:weightSum="2">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="1" android:orientation="vertical">
        <Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/food_amount_whole_increase_Button" android:text="More"></Button>
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:inputType="number" android:id="@+id/food_amount_whole_EditText" android:digits="@string/non_decimal_integers">
            <requestFocus></requestFocus>
        </EditText>
        <Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/food_amount_whole_decrease_Button" android:text="Less"></Button>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout2" android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="1" android:orientation="vertical">
        <Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/food_amount_part_increase_Button" android:text="More (part)"></Button>
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/food_amount_part_EditText" android:text="&lt;ignore&gt;"></EditText>
        <Button android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/food_amount_part_decrease_Button" android:text="Less (part)"></Button>
    </LinearLayout>
    
</LinearLayout>
